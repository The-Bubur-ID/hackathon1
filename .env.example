# PCI DSS Compliance Automation - Environment Variables
# Copy to .env and fill in your actual values

# Railway PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@host:port/railway

# OpenAI API for AI Agents
OPENAI_API_KEY=sk-proj-your-openai-key-here

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_ORG=the-bubur

# Optional Integrations (for full scope)
SNYK_TOKEN=snyk_your-snyk-token-here
CLICKUP_TOKEN=pk_your-clickup-token-here
CLICKUP_LIST_ID=your-list-id-here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Knowledge Base Configuration
USE_PGVECTOR=false  # Set to true if pgvector extension is available
KNOWLEDGE_BASE_TYPE=simple  # 'simple' for keyword search, 'vector' for embeddings

# n8n Configuration (if self-hosted)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-password
N8N_ENCRYPTION_KEY=your-encryption-key

# Demo/Testing
DEMO_MODE=true
LOG_LEVEL=info